{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "isolatedModules": false,
    "lib": ["es2018", "dom"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.story.tsx", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
